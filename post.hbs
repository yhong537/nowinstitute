{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
  the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}


{{! Article }}
<div class="content container">
  <div class="row">

    <main class="main col-sm-12" role="main">
      <article class="{{post_class}}">


        <header class="post-header">
          <h1 class="post-title">{{title}}</h1> {{#if tags}}
          <p class="lead tags">Posted in {{tags}}</p>{{/if}}
          <section class="post-meta">
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
          </section>
        </header>


        <section class="post-content">
          {{content}}
        </section>

        <footer class="post-footer">
          <div class="row">

          {{! Author }}
          {{#author}}
          <section class="author media col-sm-6">

            {{#if image}}
            <figure class="media-left author-image">
              <a href="{{url}}"><img class="author-thumb" src="{{image}}" alt="{{name}}" /></a>
            </figure>
            {{/if}}

            <div class="media-body">

              <h4 class="media-heading">
                <span class="attr">Written by</span>
                <a href="{{url}}">{{name}}</a>
              </h4>

              <p>{{#if bio}}{{bio}}{{else}}
                Read <a href="{{url}}">more posts</a> by this author.{{/if}} <br>

                <small>
                {{#if location}}From {{location}} &middot;{{/if}}
                {{#if website}} <a href="{{website}}">{{website}}</a>{{/if}}
                </small>
              </p>
            </div><!-- /.media-body -->

          </section>
          {{/author}}



           {{! Share post }}
            <section class="share col-sm-6">
              <div class="share-links">
              <h4>Share this post</h4>
              <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="fa fa-facebook-square"></i> <span>Facebook</span>
              </a>

              <a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="fa fa-twitter-square"></i> <span>Twitter</span>
              </a>

              <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                 onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <i class="fa fa-google-plus-square"></i> <span>Google+</span>
              </a>
              </div>
            </section>

          </div>
        </footer>

      </article>
    </main>


  </div><!-- /.row -->
</div><!-- /.content -->



{{! Other posts }}
<div class="widget container">
  <div class="row">

    <aside class="read-next">

      <div class="col-xs-6">
      {{#prev_post}}
        <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
          <section class="read-next-desc">
            <h4 class="left"><span><i class="fa fa-chevron-left"></i> Previous</span> : {{title}}</h4>
            <small>{{excerpt words="19"}}&hellip;</small>
          </section>
        </a>
      {{/prev_post}}
      </div>

      <div class="col-xs-6">
      {{#next_post}}
        <a class="read-next-story next {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
          <section class="read-next-desc">
            <h4 class="right">{{title}} : <span>Next <i class="fa fa-chevron-right"></i></span></h4>
            <small>{{excerpt words="19"}}&hellip;</small>
          </section>
        </a>
      {{/next_post}}
      </div>

    </aside>

  </div><!-- /.row -->
</div><!-- /.widget -->



{{/post}}
